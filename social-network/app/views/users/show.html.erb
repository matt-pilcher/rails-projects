<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>
      <%= @user.name %>
    </h3>
    <% if @user.posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>
